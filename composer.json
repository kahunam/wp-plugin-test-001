{
    "name": "kahunam/featured-image-helper",
    "description": "WordPress plugin to identify, generate, and manage featured images using Gemini AI",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your@email.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^2.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "FIH\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FIH\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html tests/coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
